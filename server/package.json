{
  "name": "nft-api",
  "version": "1.0.0",
  "description": "NFT API",
  "keywords": [],
  "license": "MIT",
  "author": "Huynh Duc Dung",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsup",
    "build:ts": "tsup --env.NODE_ENV production",
    "dev": "tsx watch src/server.ts",
    "start": "tsx src/server.ts",
    "test": "npm run build:ts && tsc -p test/tsconfig.test.json && cross-env TS_NODE_FILES=true tap --ts test/**/*.test.ts"
  },
  "dependencies": {
    "@fastify/autoload": "6.3.0",
    "@fastify/cors": "11.0.1",
    "@fastify/multipart": "9.0.3",
    "@fastify/sensible": "6.0.3",
    "@sinclair/typebox": "0.34.33",
    "close-with-grace": "2.2.0",
    "fastify": "5.3.0",
    "fastify-cli": "7.4.0",
    "fastify-plugin": "5.0.1",
    "fastify-tsconfig": "3.0.0",
    "nft.storage": "7.2.0",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "@types/busboy": "1.5.4",
    "@types/node": "22.14.1",
    "@types/tap": "18.0.0",
    "cross-env": "7.0.3",
    "fast-json-stringify": "6.0.1",
    "tap": "21.1.0",
    "tsup": "8.4.0",
    "tsx": "4.19.3"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": [
      "cjs"
    ],
    "target": "es2018"
  }
}
